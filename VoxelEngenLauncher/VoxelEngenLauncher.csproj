<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resurces\Icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Layouts\WindowTab\SecondPlane.jpg" />
    <None Remove="Player\PlayersInfo.json" />
    <None Remove="Resurces\langs.json" />
    <None Remove="Resurces\SecondPlane.jpg" />
    <None Remove="Resurces\trash.svg" />
    <None Remove="settings.toml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resurces\Icon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="settings.toml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="2.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SharpVectors" Version="1.8.4.2" />
    <PackageReference Include="SharpVectors.Wpf" Version="1.8.4.2" />
    <PackageReference Include="Svg" Version="3.4.7" />
    <PackageReference Include="Tomlyn" Version="0.18.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Layouts\WindowTab\SecondPlane.jpg" />
    <Resource Include="Player\PlayersInfo.json" />
    <Content Include="Resurces\langs.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Resource Include="Resurces\Logo.svg" />
    <Resource Include="Resurces\SecondPlane.jpg" />
    <Resource Include="Resurces\trash.svg" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Player\Skin\" />
    <Folder Include="Mods\" />
  </ItemGroup>

</Project>
